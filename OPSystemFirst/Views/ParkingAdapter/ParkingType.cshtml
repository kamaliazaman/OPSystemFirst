@model OPSystemFirst.Models.ParkingAdapter

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <br><br>
        <h4>Parking Type</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.parkingType, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(x => Model.parkingType, new List<SelectListItem>
                {
                         new SelectListItem() {Text = "Normal Parking", Value="NormalParking"},
                         new SelectListItem() {Text = "Reserve Bays", Value="ReserveBays"}

                })
                @Html.ValidationMessageFor(model => model.parkingType)
            </div>
        </div>

    </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Select" class="btn btn-default" />
            </div>
        </div>
}